<body>
    <h1>All Cars</h1>
    <ul>
      <% cars.forEach(car => { %>
        <li>
            <a href="/cars/<%= car._id %>"> <%= car.year %> <%= car.make %> <%= car.model %> </a>
        </li>
      <% }); %>
    </ul>
  </body>
</html>
